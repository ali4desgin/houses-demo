<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc_2018.housing.MyAccount">

    <TextView
        android:text="MY account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/textView5"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/editText26"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="user name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText26"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText27"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText27"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText28"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText28"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText29"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText29"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText30"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="first name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText30"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText31"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="last name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:visibility="invisible"
        android:layout_below="@+id/editText31"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText32"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="ID"

        android:textColor="@android:color/black"
        android:textColorHint="@color/colorAccent" />

    <Button
        android:id="@+id/button21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button20"
        android:layout_toEndOf="@+id/textView5"
        android:background="#cc0041"
        android:text="Delete"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button21"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_orange_dark"
        android:text="Logout"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_toStartOf="@+id/textView5"
        android:background="@android:color/holo_blue_dark"
        android:text="update"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="normal|bold" />
</RelativeLayout>
